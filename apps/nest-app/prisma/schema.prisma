// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  playlists Playlist[]
}

model Playlist {
  id        Int      @default(autoincrement()) @id
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   Int
  name      String?
}